<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <style>
    body {
      background-color: #0d1117;
      color: #c9d1d9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 40px 20px;
    }

    h1 {
      color: #58a6ff;
      text-align: center;
      margin-bottom: 30px;
      font-size: 2.5em;
    }

    .top-btn {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
    }

    .top-btn a {
      background-color: #238636;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      transition: background-color 0.3s ease, transform 0.2s;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.4);
    }

    .top-btn a:hover {
      background-color: #2ea043;
      transform: scale(1.05);
    }

    table {
      width: 90%;
      max-width: 950px;
      margin: 0 auto;
      border-collapse: collapse;
      background-color: #161b22;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.4);
    }

    th, td {
      padding: 16px 20px;
      text-align: left;
    }

    th {
      background-color: #21262d;
      color: #58a6ff;
      border-bottom: 2px solid #30363d;
      font-size: 1.1em;
    }

    td {
      border-bottom: 1px solid #30363d;
    }

    tr:hover {
      background-color: #1f2a35;
      transition: background-color 0.3s ease;
    }

    .btn {
      padding: 8px 16px;
      border: none;
      border-radius: 6px;
      font-size: 0.9em;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s;
      text-decoration: none;
      display: inline-block;
      margin: 2px;
    }

    .edit-btn {
      background-color: #3b82f6;
      color: white;
    }

    .edit-btn:hover {
      background-color: #2563eb;
      transform: scale(1.05);
    }

    .delete-btn {
      background-color: #ef4444;
      color: white;
    }

    .delete-btn:hover {
      background-color: #dc2626;
      transform: scale(1.05);
    }

    @media screen and (max-width: 600px) {
      table, thead, tbody, th, td, tr {
        display: block;
      }

      th {
        text-align: center;
        background-color: #0d1117;
        border-bottom: none;
      }

      td {
        text-align: center;
        border-bottom: none;
        border-top: 1px solid #30363d;
      }

      tr {
        margin-bottom: 15px;
      }
    }
  </style>
</head>
<body>
  <h1>All Users</h1>

  <div class="top-btn">
    <a href="/newuser">+ New User</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <a class="btn edit-btn" href="/edit/<%= user.id %>">Edit</a>
          </td>
          <td>
            <form action="/delete/<%= user.id %>?_method=DELETE" method="POST" style="display:inline;">
              <button class="btn delete-btn" type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
